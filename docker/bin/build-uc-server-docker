#!/usr/bin/env bash
set -ex;

current_dir=$(pwd)
script_dir=$(dirname $0)
project_dir=$(dirname $(dirname $(realpath $script_dir)))
container_name="unitycatalog"
container_version=$(< "$project_dir/version.sbt" cut -d '"' -f2)

echo "Changing directory to $project_dir"
cd "$project_dir"

if [[ -r Dockerfile ]]; then
    echo "Building docker container $container_name:$container_version"
    docker buildx build \
      --progress=plain \
      --no-cache \
      --build-arg unitycatalog_version="$container_version" \
      -t "$container_name:$container_version" .
else
    echo "Dockerfile not found in $project_dir."
    exit
fi

echo "Returning to base directory $current_dir"
cd "$current_dir"